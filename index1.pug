doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(type="image/png", sizes="32x32", rel="icon", href="./source/img/favicon.png")
        link(href='css/style.css', rel="stylesheet")
        script(src='./source/scripts/forms.js', defer)
        title Form elements
    
    body.bgcolor-white 
        //gray logo and links
        .gray-logo__wrap 
            img(src="./source/img/gray_logo.svg", alt="gray logo Toxin")
            a(href="index.html", target="_blank").link-black Headers & footers

        .wrap.three-columns 
            //column with inputs
            .column 
                //================= Text field =========================
                .input-title__wrap
                    p.input__title Text Field
                    p.input__text Default
                form(validate)
                    input(type="email", placeholder="Email").input__class
                    
                //================== Text Field ========================        
                .input-title__wrap
                    p.input__title Text Field
                    p.input__text Hover / Focus
                form(validate)
                        input(type="email", value="This is pretty awesome").input__class.input-dark

                //================== Choise guests block ========================
                #guest__dropdown 
                    .input-title__wrap
                        p.input__title Dropdown
                    .input__wrap 
                        p#guests Сколько гостей
                        button(type="submit")#guests__button.button-arrow
                            img(src="./source/img/arrow_down.svg", alt="choise guests")
                    //adults
                    .guest__choise 
                        .guest__line 
                            p.guest__text взрослые
                            img(src="./source/img/minus.svg", alt="adults reduce")#adults-minus.guest__img-btn
                            p#adults.guests__choise 2
                            img(src="./source/img/plus.svg", alt="adults add")#adults-plus.guest__img-btn
                        //children
                        .guest__line 
                            p.guest__text дети
                            img(src="./source/img/minus.svg", alt="children reduce")#children_minus.guest__img-btn
                            p#children.guests__choise 0
                            img(src="./source/img/plus.svg", alt="children add")#children_plus.guest__img-btn
                        //baby
                        .guest__line 
                            p.guest__text младенцы
                            img(src="./source/img/minus.svg", alt="baby reduce")#baby_minus.guest__img-btn
                            p#baby.guests__choise 0
                            img(src="./source/img/plus.svg", alt="baby add")#baby_plus.guest__img-btn
                        //confirm selection
                        .guest__confirm 
                            p.guest__clear очистить
                            p.guest__ok применить

                //================== Masked text field ========================
                .input-title__wrap
                    p.input__title masked text field
                form(validate)
                        input(type="text", placeholder ="ДД.ММ.ГГГГ",maxlength="10")#user-date.input__class

                //================== Masked text field ========================
                .two-input__wrap.mrtop-20
                    div.mrrh-20
                        .input-title__wrap
                            p.input__title date Dropdown
                        form(validate)
                            .input__wrap-150
                                p.date-gray ДД.ММ.ГГГГ
                                button(type="submit").button-arrow
                                    img(src="./source/img/arrow_down.svg", alt="choise date")

                    div
                        .input-title__wrap
                            p.input__title date Dropdown
                        form(validate)
                            .input__wrap-150
                                p.date-gray 19.08.2019
                                button(type="submit").button-arrow
                                    img(src="./source/img/arrow_down.svg", alt="choise date")       

                //============ filter date dropdown ======
                .input-title__wrap.mrtop-20
                    p.input__title filter date dropdown
                form(validate)
                    .input__wrap-266
                        p.date-gray 19 авг - 23 авг
                        button(type="submit").button-arrow
                            img(src="./source/img/arrow_down.svg", alt="choise date")

                //============ subscription text field ======
                .input-title__wrap.mrtop-20
                    p.input__title subscription text field
                form(validate)
                    .input__wrap-266
                        input(type="email", placeholder="Email")
                        button(type="submit").button-arrow
                            img(src="./source/img/arrow_purpure.svg", alt="subscribe button")


            //chekbox
            .column.side 
                //================== Checkbox Buttons ========================
                .chekbox-title__wrap
                    p.input__title Checkbox Buttons
                form(validate)
                    label.check
                        input(type="checkbox").check__input
                        span.check__box 
                        p Можно курить
                    label.check
                        input(type="checkbox",checked).check__input
                        span.check__box 
                        p Можно с питомцами
                    label.check
                        input(type="checkbox",checked).check__input 
                        span.check__box
                        p Можно пригласить гостей (до 10 человек)

                //================== Radio Buttons ========================
                .chekbox-title__wrap
                    p.input__title.mrtop-20 Radio Buttons
                form(validate)
                    div
                        label.radio 
                            input(type="radio", name="mal", checked).radio__input 
                            span.radio__box 
                            p.inline-text.color-black-75 Мужчина
                        label.radio.pdleft-20
                            input(type="radio", name="mal", disabled).radio__input
                            span.radio__box 
                            p.inline-text Женщина

                //================== Toggle ========================
                .chekbox-title__wrap
                    p.input__title.mrtop-20 Toggle
                form(validate)
                    .switch__wrap
                        label.switch
                            input(type="checkbox", checked).check__input 
                            span.switch__box
                            p.inline-text Получать спецпредложения
                        label.switch
                            input(type="checkbox").check__input
                            span.switch__box 
                            p.inline-text Получать спецпредложения

                //================== Like buttons ========================
                .chekbox-title__wrap
                    p.input__title.mrtop-20 like button
                .flex-content
                    .like__box
                        .like__heart
                        p 2

                    .like__box.active
                        .like__heart.active
                        p#like.active 12

                //================== Stars ========================
                .chekbox-title__wrap
                    p.input__title.mrtop-20 rate button
                .flex-content
                    div 
                        fieldset.raiting 
                            .raiting__group
                                input(type="radio", name="raiting", value="1",aria-label="ужасно").raiting__star.raiting__star-one
                                input(type="radio", name="raiting", value="2",aria-label="плохо").raiting__star.raiting__star-two
                                input(type="radio", name="raiting", value="3",aria-label="нормально").raiting__star.raiting__star-three
                                input(type="radio", name="raiting", value="4",aria-label="хорошо", checked).raiting__star.raiting__star-four
                                input(type="radio", name="raiting", value="5",aria-label="отлично").raiting__star.raiting__star-five

                    div.pdleft-20 
                        fieldset.raiting 
                            .raiting__group
                                input(type="radio", name="raiting2", value="1",aria-label="ужасно").raiting__star.raiting__star-one
                                input(type="radio", name="raiting2", value="2",aria-label="плохо").raiting__star.raiting__star-two
                                input(type="radio", name="raiting2", value="3",aria-label="нормально").raiting__star.raiting__star-three
                                input(type="radio", name="raiting2", value="4",aria-label="хорошо").raiting__star.raiting__star-four
                                input(type="radio", name="raiting2", value="5",aria-label="отлично", checked).raiting__star.raiting__star-five
                        

            //buttons
            .column 
                p Buttons