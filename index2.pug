        script(src='./source/scripts/kalender.js', defer)

        title Cards
    
    body.bgcolor-white 
        // ==============================================================
        // gray logo and links
        // ==============================================================
        .gray-logo__wrap 
            img(src="./source/img/gray_logo.svg", alt="gray logo Toxin")
            a(href="index.html", target="_blank").link-black Headers & footers
            a(href="index1.html", target="_blank").link-black Form elements

        .wrap.three-columns 
            // 1 column ================================================
            // choise room
            .column 
                .card
                    .card-title Найдём номера под #[br] ваши пожелания
                    .two-input__wrap
                        div.mrrh-20
                            .input-title__wrap
                                p.input__title прибытие
                            form(validate)
                                .input__wrap-150
                                    p.date-gray ДД.ММ.ГГГГ
                                    button(type="submit").button-arrow
                                        img(src="./source/img/arrow_down.svg", alt="choise date")

                        div
                            .input-title__wrap
                                p.input__title выезд
                            form(validate)
                                .input__wrap-150
                                    p.date-gray ДД.ММ.ГГГГ
                                    button(type="submit").button-arrow
                                        img(src="./source/img/arrow_down.svg", alt="choise date") 

                    // Choise guests block
                    #guest__dropdown 
                        .input-title__wrap
                            p.input__title гости
                        .input__wrap 
                            p#guests Сколько гостей
                            button(type="submit")#guests__button.button-arrow
                                img(src="./source/img/arrow_down.svg", alt="choise guests")
                        
                        .guest__choise 
                            // adults
                            .guest__line 
                                p.guest__text взрослые
                                img(src="./source/img/minus.svg", alt="adults reduce")#adults-minus.guest__img-btn
                                p#adults.guests__choise 2
                                img(src="./source/img/plus.svg", alt="adults add")#adults-plus.guest__img-btn
                            // children
                            .guest__line 
                                p.guest__text дети
                                img(src="./source/img/minus.svg", alt="children reduce")#children_minus.guest__img-btn
                                p#children.guests__choise 0
                                img(src="./source/img/plus.svg", alt="children add")#children_plus.guest__img-btn
                            // baby
                            .guest__line 
                                p.guest__text младенцы
                                img(src="./source/img/minus.svg", alt="baby reduce")#baby_minus.guest__img-btn
                                p#baby.guests__choise 0
                                img(src="./source/img/plus.svg", alt="baby add")#baby_plus.guest__img-btn
                            // confirm selection
                            .guest__confirm 
                                p.guest__clear очистить
                                p.guest__ok применить

                    //button
                    .card-button__wrap
                        button.button__arrow
                            p.button__arrow-text подобрать номер
                            svg(width="18", height="18", viewBox="0 0 18 18", fill="none", xmlns="http://www.w3.org/2000/svg")
                                path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z", fill="white")

                //registration
                .card
                    .card-title Регистрация аккаунта
                    .card-name__wrap
                        form(validate)
                            input(type="text", placeholder="Имя").input__class
                            input(type="text", placeholder="Фамилия").input__class

                    div
                        label.radio 
                            input(type="radio", name="mal", checked).radio__input 
                            span.radio__box 
                            p.inline-text.color-black-75 Мужчина
                        label.radio.pdleft-20
                            input(type="radio", name="mal").radio__input
                            span.radio__box 
                            p.inline-text Женщина

                    .input-title__wrap
                        p.input__title дата рождения
                    form(validate)
                            input(type="text", placeholder ="ДД.ММ.ГГГГ",maxlength="10")#user-date.input__class

                    .input-title__wrap
                        p.input__title данные для входа в сервис
                    form(validate)
                            input(type="email", placeholder="Email").input__class
                    form(validate)
                            input(type="password", placeholder="Пароль").input__class

                    form(validate)
                        label.switch
                            input(type="checkbox").check__input 
                            span.switch__box
                            p.inline-text Получать спецпредложения


                    .mrtop-24 
                        button.button__arrow
                            p.button__arrow-text перейти к оплате
                            svg(width="18", height="18", viewBox="0 0 18 18", fill="none", xmlns="http://www.w3.org/2000/svg")
                                path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z", fill="white")

                    .card-register__wrap 
                        p.card-register__text Уже есть аккаунт на Toxin
                        .card-buttonEmpty__wrap 
                            button.card-button__empty войти

            // 2 column ================================================
            // Room №888
            .column 
                .card 
                    .card-title__wrap
                        .card-title № 888 #[span(class="card-title-violet") люкс] 
                        p.card-title-gray 9 990₽ #[span(class="card-title-text") в сутки]

                    .two-input__wrap
                        div.mrrh-20
                            .input-title__wrap
                                p.input__title прибытие
                            form(validate)
                                .input__wrap-150
                                    p.date-gray 19.08.2019
                                    button(type="submit").button-arrow
                                        img(src="./source/img/arrow_down.svg", alt="choise date")

                        div
                            .input-title__wrap
                                p.input__title выезд
                            form(validate)
                                .input__wrap-150
                                    p.date-gray 23.08.2019
                                    button(type="submit").button-arrow
                                        img(src="./source/img/arrow_down.svg", alt="choise date") 

                    div 
                        .input-title__wrap
                            p.input__title гости
                        .input__wrap 
                            p.guests__show Сколько гостей
                            button(type="submit").button-arrow
                                img(src="./source/img/arrow_down.svg", alt="choise guests")

                    .card-price__wrap
                        .card-price 
                            p 9 990₽ х 4 суток
                            p 39 960₽
                        .card-price 
                            .price-info__wrap
                                p Сбор за услуги: скидка 2 179₽
                                button.price-info 
                                    img(src="./source/img/price-info.svg", alt="information about price")
                            p 0₽
                        .card-price
                            .price-info__wrap
                                p Сбор за дополнительные #[br] услуги
                                button.price-info 
                                    img(src="./source/img/price-info.svg", alt="information about price")
                            p 300₽
                    .card-price__total 
                        p Итого
                        p.price__total-line 
                        p 38 081₽

                    button.button__arrow.wdt-100
                        p.button__arrow-text забронировать
                        svg(width="18", height="18", viewBox="0 0 18 18", fill="none", xmlns="http://www.w3.org/2000/svg")
                            path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z", fill="white")

                // login
                .card
                    .card-title Войти
                    .input-title__wrap
                    form(validate)
                            input(type="email", placeholder="Email").input__class
                    form(validate)
                            input(type="password", placeholder="Пароль").input__class

                    .mrtop-20 
                        button.button__arrow
                            p.button__arrow-text войти
                            svg(width="18", height="18", viewBox="0 0 18 18", fill="none", xmlns="http://www.w3.org/2000/svg")
                                path(d="M9 0.984375L17.0156 9L9 17.0156L7.59375 15.6094L13.1719 9.98438H0.984375V8.01562H13.1719L7.59375 2.39062L9 0.984375Z", fill="white")

                    .card-register__wrap 
                        p.card-register__text Нет аккаунта на Toxin?
                        .card-buttonEmpty__wrap 
                            button.card-button__empty создать

            // 3 column ================================================
            // kalender
            .column 
                //room 888
                .miniCard-wrap 
                    .miniCard-image
                        img(src="./source/img/room888.jpg", alt="room 888")
                    .miniCard-content 
                        .card-title__wrap
                            .card-title № 888 #[span(class="card-title-violet") люкс] 
                            p.card-title-gray 9 990₽ #[span(class="card-title-text") в сутки]
                        .card-raiting__wrap 
                            fieldset.raiting 
                                .raiting__group
                                    input(type="radio", name="raiting1", value="1",aria-label="ужасно").raiting__star.raiting__star-one
                                    input(type="radio", name="raiting1", value="2",aria-label="плохо").raiting__star.raiting__star-two
                                    input(type="radio", name="raiting1", value="3",aria-label="нормально").raiting__star.raiting__star-three
                                    input(type="radio", name="raiting1", value="4",aria-label="хорошо").raiting__star.raiting__star-four
                                    input(type="radio", name="raiting1", value="5",aria-label="отлично", checked).raiting__star.raiting__star-five

                            p.card-raiting__text 145 #[span(class="card-raiting__lightText") отзывов] 

                //room 840
                .miniCard-wrap 
                    .miniCard-image
                        img(src="./source/img/room840.jpg", alt="room 840")
                    .miniCard-content 
                        .card-title__wrap
                            .card-title № 840 
                            p.card-title-gray 9 990₽ #[span(class="card-title-text") в сутки]
                        .card-raiting__wrap 
                            fieldset.raiting 
                                .raiting__group
                                    input(type="radio", name="raiting2", value="1",aria-label="ужасно").raiting__star.raiting__star-one
                                    input(type="radio", name="raiting2", value="2",aria-label="плохо").raiting__star.raiting__star-two
                                    input(type="radio", name="raiting2", value="3",aria-label="нормально").raiting__star.raiting__star-three
                                    input(type="radio", name="raiting2", value="4",aria-label="хорошо", checked).raiting__star.raiting__star-four
                                    input(type="radio", name="raiting2", value="5",aria-label="отлично").raiting__star.raiting__star-five

                            p.card-raiting__text 65 #[span(class="card-raiting__lightText") отзывов]

                
                    

